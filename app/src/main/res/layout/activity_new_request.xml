<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".NewRequestActivity"
    android:background="@drawable/backdrop">

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/sDrinkSelection"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bDrinkRefill"
        android:text="Submit Refill Request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffa088"
        />

    <Button
        android:id="@+id/bCrackerRefill"
        android:text="Cracker Refill"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffa088"
        />

    <Button
        android:id="@+id/bHelp"
        android:text="Help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffa088"
        />

</LinearLayout>